<h1>Editing Book</h1>
 <%= form_with model: @book do |f| %>
 <div>
  <label>Title</label>
 </div>
 <%= f.text_field :title %>
 
 <div>
  <label>Body</label>
 </div>
 <%= f.text_field :body %>
 <div>
  <%= f.submit "Update Book" %>
 </div>
 <span><%= link_to "Show", book_path(@book.id)%></span>
 <span><%= link_to "Back", books_path%></span> 
<% end %>