
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
   <tr>
     <td>
       <span><%= book.title %></span>
     </td>
     <td>
       <span><%= book.body %></span>
     </td>
     <td>
       <span><%= link_to "Show", book_path(book.id)%></span>
     </td>
     <td>
       <span><%= link_to "Edit", edit_book_path(book.id)%></span>
     </td>
     <td>
       <span><%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm" => "Are You Sure?" %></span>
     </td>
   </tr>
   <% end %>
  </tbody>
</table>

<h2>New book</h2>
 <%= form_with model: @book do |f| %>
 <div>
   <label>Title</label>
 </div>
 <%= f.text_field :title %>
 
  <div>
   <label>Body</label>
 </div>
 <%= f.text_area :body %>
 <div>
   <%= f.submit "Create Book" %>
 </div>
 <% end %>